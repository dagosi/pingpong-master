<h1 class='page-header'>Leaderboard</h1>

<!-- <%= image_tag('leaderboard.png') %> -->

<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Games Played</th>
    </tr>
  </thead>
  <tbody>
    <% @ranked_users.each.with_index(1) do |user, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= user.name %></td>
        <td><%= user.score %></td>
        <td><%= user.matches.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
